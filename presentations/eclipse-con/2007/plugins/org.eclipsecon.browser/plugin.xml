<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="usefulLinks" name="Useful Link" schema="schema/usefulLinks.exsd"/>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="%category.name.browser"
            id="org.eclipsecon.browser.category">
      </category>
      <view
            allowMultiple="false"
            category="org.eclipsecon.browser.category"
            class="org.eclipsecon.browser.view.ui.EclipseLinksView"
            icon="icons/sample.gif"
            id="org.eclipsecon.browser.view"
            name="%view.name.links">
      </view>
      <stickyView
            closeable="true"
            id="org.eclipsecon.browser.view"
            location="RIGHT"
            moveable="true">
      </stickyView>
   </extension>
   <extension
         point="org.eclipsecon.browser.usefulLinks">
      <linkObject
            description="%link.object.description.eclipse.downloads"
            link="http://www.eclipse.org/downloads/"
            name="%link.object.name.eclipse.downloads">
      </linkObject>
      <linkObject
            description="%link.object.description.eclipse.bugs"
            link="https://bugs.eclipse.org/bugs/"
            name="%link.object.name.eclipse.bugs">
      </linkObject>
      <linkObject
            description="%link.object.description.eclipsepedia"
            link="http://wiki.eclipse.org/index.php/Main_Page"
            name="%link.object.name.eclipsepedia">
      </linkObject>         
   </extension>

</plugin>
